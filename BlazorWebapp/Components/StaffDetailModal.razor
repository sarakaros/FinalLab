<div class="modal-backdrop show"></div>

<div class="modal fade show" tabindex="-1" style="display: block;" data-testid="modal-popup">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            
            <div class="modal-header">
                <h5 class="modal-title">@Staff.Name's Details</h5>
                <button type="button" class="btn-close" @onclick="Close" data-testid="modal-close-button-x"></button>
            </div>
            
            <div class="modal-body">
                <div class="text-center mb-3">
                    <img src="@Staff.PhotoUrl" alt="@Staff.Name" class="img-fluid rounded" style="max-height: 200px;">
                </div>
                
                <ul class="list-group">
                    <li class="list-group-item"><strong>Staff ID:</strong> @Staff.Id</li>
                    <li class="list-group-item"><strong>Email:</strong> @Staff.Email</li>
                    <li class="list-group-item"><strong>Phone:</strong> @Staff.Phone</li>
                    <li class="list-group-item"><strong>Start Date:</strong> @Staff.StartingDate.ToShortDateString()</li>
                </ul>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close" data-testid="modal-close-button-footer">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Staff Staff { get; set; } = new();

    [Parameter]
    public EventCallback OnClose { get; set; }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}